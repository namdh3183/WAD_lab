@model lab1rework.Models.KHACHHANG
@{
    ViewBag.Title = "DangKy";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<h2>ĐĂNG KÝ</h2>

<form action="/User/DangKy" method="post">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="mb-3">
        <label class="form-label">Họ Tên</label>
        <input type="text" class="form-control" name="HoTen">
        @Html.ValidationMessageFor(model => model.HoTen, "", new { @class = "text-danger" })
    </div>
    <div class="mb-3">
        <label class="form-label">Tài khoản</label>
        <input type="text" class="form-control" name="Taikhoan">
        @Html.ValidationMessageFor(model => model.Taikhoan, "", new { @class = "text-danger" })
    </div>
    <div class="mb-3">
        <label class="form-label">Mật khẩu</label>
        <input type="password" class="form-control" name="Matkhau">
        @Html.ValidationMessageFor(model => model.Matkhau, "", new { @class = "text-danger" })
    </div>
    <div class="mb-3">
        <label class="form-label">Xác nhận Mật khẩu</label>
        <input type="password" class="form-control" name="XnMatkhau">
        @Html.ValidationMessageFor(model => model.XnMatkhau, "", new { @class = "text-danger" })
    </div>
    <div class="mb-3">
        <label class="form-label">Email</label>
        <input type="email" class="form-control" name="Email" aria-describedby="emailHelp">
        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
    </div>
    <div class="mb-3">
        <label class="form-label">Địa chỉ</label>
        <input type="text" class="form-control" name="DiachiKH">
        @Html.ValidationMessageFor(model => model.DiachiKH, "", new { @class = "text-danger" })
    </div>
    <div class="mb-3">
        <label class="form-label">Số điện thoại</label>
        <input type="text" class="form-control" name="DienthoaiKH">
        @Html.ValidationMessageFor(model => model.DienthoaiKH, "", new { @class = "text-danger" })
    </div>
    <div class="mb-3">
        <label class="form-label">Ngày sinh</label>
        <input type="date" class="form-control" name="Ngaysinh">
        @Html.ValidationMessageFor(model => model.Ngaysinh, "", new { @class = "text-danger" })
    </div>
    <button type="submit" class="btn btn-primary">Đăng ký</button>
</form>